<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    app:cardCornerRadius="5dp"
    android:layout_margin="6dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/llFavContent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="#ffffff">
        <ImageView
            android:layout_marginTop="8dp"
            android:id="@+id/imgDefaultBookImage"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:src="@drawable/default_book_cover"
            android:background="#f5f5f5"/>
        <RelativeLayout
            android:layout_below="@+id/imgDefaultBookImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtFavBookName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello World"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:padding="4dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txtFavBookAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtFavBookName"
                android:text="Android Inc."
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:padding="4dp"/>
            <TextView
                android:id="@+id/txtFavBookPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.300"
                android:textSize="18sp"
                android:padding="4dp"
                android:layout_below="@+id/txtFavBookAuthor"
                android:layout_centerInParent="true"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/txtFavBookRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textSize="18sp"
                android:padding="4dp"
                android:layout_below="@+id/txtFavBookPrice"
                android:layout_centerInParent="true"
                android:textColor="#ffc828"
                android:drawableLeft="@drawable/ic_star"/>

            </RelativeLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>